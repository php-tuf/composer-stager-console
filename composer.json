{
    "name": "php-tuf/composer-stager-console",
    "description": "Example console commands for Composer Stager.",
    "license": "MIT",
    "type": "library",
    "readme": "README.md",
    "authors": [
        {
            "name": "Travis Carden",
            "email": "travis.carden@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/php-tuf/composer-stager-console",
    "require": {
        "php": "^7.4 || ^8.0",
        "php-tuf/composer-stager": "^1.0",
        "symfony/config": "^4.4 || ^5.2",
        "symfony/console": "~4.4.0 || ~5.3.0",
        "symfony/dependency-injection": "^4.4 || ^5.2",
        "symfony/yaml": "^4.4 || ^5.2"
    },
    "require-dev": {
        "ext-json": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "ergebnis/composer-normalize": "^2.20",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/phar": "^4.8",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/filesystem": "^4.4 || ^5.2",
        "symfony/process": "^4.4 || ^5.2"
    },
    "suggest": {
        "roave/security-advisories": "Ensures that your application doesn't have installed dependencies with known security vulnerabilities."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "PhpTuf\\ComposerStagerConsole\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTuf\\ComposerStagerConsole\\Tests\\PHPUnit\\": "tests/PHPUnit"
        }
    },
    "bin": [
        "bin/composer-stage"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "c": "rm -r var/*/* &> /dev/null || true",
        "coverage": "open $(pwd)/var/phpunit/coverage-report/index.html || echo 'Run the \"coverage\" command to generate the coverage report.'",
        "functional": "phpunit --testsuite=Functional",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs -s",
        "phpunit": "phpunit",
        "psalm": "psalm.phar",
        "psalter": "psalm.phar --alter --issues=all",
        "security": "@composer update --dry-run roave/security-advisories",
        "test": "phpunit --coverage-html $(pwd)/var/phpunit/coverage-report --coverage-text --color=always",
        "unit": "phpunit --testsuite=Unit"
    },
    "scripts-descriptions": {
        "c": "Clears the script caches in the \"var\" directory.",
        "coverage": "Opens the code coverage report generated by the \"coverage\" script (on macOS).",
        "functional": "Runs functional tests.",
        "phpcbf": "Automatically fixes standards violations where possible.",
        "phpcs": "Checks code for standards compliance.",
        "phpunit": "Runs PHPUnit tests.",
        "psalm": "Automatically fixes Psalm errors where possible.",
        "psalter": "Automatically fixes Psalm errors where possible.",
        "security": "Checks installed dependencies for known security vulnerabilities.",
        "test": "Runs automated tests.",
        "unit": "Runs unit tests."
    }
}
