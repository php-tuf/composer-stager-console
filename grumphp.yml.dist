---
grumphp:
    ascii:
        failed: ~
        succeeded: ~
    fixer:
        enabled: false
    hide_circumvention_tip: true

    tasks:
        composer: ~
        composer_normalize: ~
        phpcs:
            standard: []
            whitelist_patterns:
                - phpcs
                - phpstan
                - src
                - tests
        phplint:
            ignore_patterns:
                - .idea
                - var
                - vendor
        phpstan:
            use_grumphp_paths: false
        phpunit: ~
        psalm: ~
        xmllint:
            ignore_patterns:
                - .idea
                - var
                - vendor
            triggered_by:
                - xml
                - xml.dist
        yamllint:
            whitelist_patterns:
                - .github
                - /^.*.ya?ml(.dist)?$/
                - config
                - src

    testsuites:
        static:
            tasks:
                - composer
                - composer_normalize
                - phpcs
                - phplint
                - psalm
                - phpstan
                - xmllint
                - yamllint
        test:
            tasks:
                - phpunit
